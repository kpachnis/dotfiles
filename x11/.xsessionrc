#!/bin/sh

cleanup() {
    pkill -TERM dunst
    pkill -TERM redshift
    rm -f ~/.Xauthority
}
trap cleanup INT TERM QUIT

# export MOZ_WEBRENDER=1
export MOZ_ACCELERATED=1


xrdb ~/.Xresources

setxkbmap -layout 'us,gr' \
    -option 'grp:alt_space_toggle,lv3:ralt_switch,terminate:ctrl_alt_bksp' \
    -variant nodeadkeys \
    -model pc105


xset b 0 0 0
xset r rate 350 35
xset dpms 0 0 0
xset s off

xsetroot -solid black

xidle -timeout 600 -ne -program ~/bin/lock &
redshift -t 6500:3250 -l 37.98:23.72 -m randr &
dunst -fn "Monospace 9" &

