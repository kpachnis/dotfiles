[init]
    templatedir = ~/.config/git/template
    defaultBranch = main
[alias]
    l = log --stat --graph --decorate --abbrev-commit --date=relative
    pl = log --graph --pretty=format:'%h - %d %s (%cr) <%an>' --abbrev-commit
    rl = reflog --format='%h %<|(20)%gd %cr %gs (%s)'
[core]
    excludesfile = ~/.config/git/ignore_global
    autocrlf = input
    pager = delta
    symlinks = true
[commit]
    gpgSign = true
    template = ~/.config/git/message
[color]
    ui = false
[instaweb]
    httpd = webrick
[log]
    decorate = auto
[push]
    default = current
    followTags = true
[status]
    showuntrackedfiles = all
[transfer]
    fsckobjects = true
[include]
    path = ~/.config/git/local
[fetch]
    fsckobjects = false
[pull]
    rebase = false
[interactive]
    diffFilter = delta --color-only
[rebase]
    updateRefs = true
[user]
    useConfigOnly = true
[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
