[init]
    templatedir = ~/.config/git/template
	defaultBranch = main
[alias]
    pl = log --oneline --graph --decorate
    l = log --stat --graph --decorate --abbrev-commit --date=relative
[core]
    excludesfile = ~/.config/git/ignore_global
    autocrlf = input
[commit]
    gpgSign = true
    template = ~/.config/git/message
[color]
    ui = auto
[log]
    decorate = auto
[push]
    default = current
[status]
    showuntrackedfiles = all
[transfer]
    fsckobjects = true
[include]
    path = ~/.config/git/local
[fetch]
	fsckobjects = false
[pull]
	rebase = false
