[init]
    templatedir = ~/.config/git/template
    defaultBranch = main
[alias]
    l = log --stat --graph --decorate --abbrev-commit --date=relative
    pl = log --graph --pretty=format:'%C(yellow)%h%Creset -%C(bold red)%d%Creset %s %C(green)(%cr) %C(cyan)<%an>%Creset' --abbrev-commit
    rl = reflog --format='%C(auto)%h %<|(20)%gd %C(blue)%cr%C(reset) %gs (%s)'
[core]
    excludesfile = ~/.config/git/ignore_global
    autocrlf = input
    pager = diff-so-fancy | bat -p
    symlinks = true
[commit]
    gpgSign = true
    template = ~/.config/git/message
[color]
    ui = auto
[instaweb]
    httpd = webrick
[log]
    decorate = auto
[push]
    default = current
    followTags = true
[status]
    showuntrackedfiles = all
[transfer]
    fsckobjects = true
[include]
    path = ~/.config/git/local
[fetch]
    fsckobjects = false
[pull]
    rebase = false
[interactive]
    diffFilter = diff-so-fancy --patch
[rebase]
    updateRefs = true
[user]
    useConfigOnly = true
